    <script>
        var currentSlide = 0;
        var carouselItems = document.querySelectorAll('.carousel-item');

        function changeSlide(n) {
            carouselItems[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + n + carouselItems.length) % carouselItems.length;
            carouselItems[currentSlide].classList.add('active');
        }

        /*
        setInterval(function() {
          changeSlide(1);
        }, 5000);
        */




        /*CAJAS*/

        function zoomIn(element) {
            element.getElementsByClassName('imagen-fondo')[0].classList.add('zoomed');
        }

        function zoomOut(element) {
            element.getElementsByClassName('imagen-fondo')[0].classList.remove('zoomed');
        }

        /*CAJAS*/



        /* wsp*/

        function toggleButton(event) {
            event.preventDefault();

            var closeButton = document.getElementById("close-icon");
            var whatsappIcon = document.getElementById("whatsapp-icon");
            var whatsappBox = document.getElementById("whatsapp-box");

            if (closeButton.style.display === "block") {
                closeButton.style.display = "none";
                whatsappIcon.style.display = "block";
                whatsappBox.style.opacity = 0;
                whatsappBox.style.visibility = "hidden";
            } else {
                closeButton.style.display = "block";
                whatsappIcon.style.display = "none";
                whatsappBox.style.opacity = 1;
                whatsappBox.style.visibility = "visible";
            }
        }
        /* Enlace */

        document.addEventListener("DOMContentLoaded", function () {
            // Obtenemos la referencia a la div de box-content
            var whatsappLink = document.getElementById("whatsapp-link");

            // Agregamos un evento de clic a la div
            whatsappLink.addEventListener("click", function () {
                // Definimos el enlace de WhatsApp
                var whatsappURL = "https://api.whatsapp.com/send?phone=TUNÚMERO&text=Hola,%20necesito%20asistencia%20técnica";
                // Redireccionamos a la página de WhatsApp
                window.open(whatsappURL, "_blank");
            });
        });



    </script>
